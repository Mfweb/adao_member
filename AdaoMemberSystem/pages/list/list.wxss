/* pages/list/list.wxss */
.thread-list {
    box-sizing: border-box;
    width: 100vw;
    background: #334054;
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    margin: 0;
    position: fixed;
    overflow: hidden;
}

.thread-list .item {
    width: 100vw;
    margin: 12px 0px 0px 0px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.thread-list .item .user-item {
    border: 1px solid #F5F5F5;
    width: 92vw;
    background: #F5F5F5;
    border-radius: 6px;
    box-shadow: 3px 3px 10px #000;
}

.list-b1 {
    /*第一行信息栏 ID UID 时间*/
    display: flex;
    color: #334054;
    font-size: 12px;
    justify-content: space-between;
    align-items: center;
}

.list-b2 {
    /*第二第三行信息栏 标题 姓名*/
    display: block;
    font-size: 12px;
    color: #A6A6A6;
    margin: 0px 0px 0px 0px;
}

.list-title {
    /*标题*/
    word-break: break-all;
}

.list-img-loading {
    width: 24px;
    height: 24px;
}

.list-img {
    /*缩略图*/
    margin: 0 auto;
    max-height: 500rpx;
}

.list-readcount {
    /*回应数*/
    color: #334054;
    font-size: 12px;
    margin-left: 10px;
    margin-top: 2px;
    text-align: left;
}

.list-sage {
    /*SAGE*/
    color: #f00;
    font-size: 12px;
    margin-right: 10px;
    margin-top: 2px;
    text-align: right;
}

.list-item-hover {
    background: #DBDBDB;
}

.list-img-ct {
    display: flex;
}

.list-tap {
    width: 100%;
}

.text {
    width: 97%;
    margin: 0 auto;
}