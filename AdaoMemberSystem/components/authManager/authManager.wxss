@import "/wxParse/wxParse.wxss";

.pdcontainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    margin: 0px;
}

.vcodeMode {
    width: 100%;
}

.Uenter {
    width: 80%;
    margin-top: 5px;
}

.Uclose {
    width: 80%;
    margin-top: 10px;
    margin-bottom: 20px;
}

.McodeInput {
    height: 30px;
    width: 60%;
    margin: 0 auto;
    margin-top: 5px;
    background: #fff;
    margin-bottom: 5px;
    font-size: 15px;
    color: #000;
    border-radius: 8px;
    padding-left: 8px;
    padding-right: 8px;
}

/*实名认证*/
.certTable {
    display: flex;
    color: #fff;
    font-size: 20px;
    margin-top: 10px;
    overflow: scroll;
}

.certSta {
    color: rgb(94, 185, 94);
}

.PhoneCertBut {
    margin: 0 auto;
    width: 70%;
    margin-top: 20px;
}

.SelectCd {
    width: 60%;
    margin: 0 auto;
    margin-top: 10px;
    color: #fff;
    height: 30px;
    font-size: 15px;
    border: 1px solid #fff;
    border-radius: 8px;
}

.picker {
    width: 95%;
    margin: 0 auto;
    margin-top: 5px;
}

.am-form-horizontal {
    color: #fff;
    width: 95%;
    margin: 0 auto;
    font-size: 12px;
}

.Sdata {
    font-size: 25px;
    text-align: center;
    margin: 0 auto;
}

.verifyCode {
    width: 100%;
    max-height: 50px;
    margin: 0 auto;
    margin-top: 8px;
}

.verifyCodeHid {
    height: 0px;
    width: 0px;
}

.user-note {
    color: #F0E68C;
    margin: 120px 10px 10px 10px;
    font-size: 1rem;
}

.user-note-line {
    margin: 30px 0 30px 0;
}

.hight-light {
    margin-left: 4px;
    margin-right: 4px;
    color: #FFF;
}

.atm-sweater {
    position: fixed;
    max-width: 90%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    opacity: 0.0;
    margin: auto;
    border-radius: 6px;
    transition: All 0.4s ease;
    z-index: -1;
}

.atm-sweater-show {
    z-index: 999;
    opacity: 0.4;
}