.wife-list {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    margin: 0px;
}

.wife-list .list {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: flex-start;
    justify-content: space-between;
    margin: 0px;
    width: 100%;
    top: 0;
    left: 0;
    height: auto;
}

.wife-list .list .left {
    width: 50%;
    top: 0;
    left: 0;
    height: auto;
}

.wife-list .list .right {
    width: 50%;
    top: 0;
    right: 0;
    height: auto;
}

.wife-list .list .item {
    width: 100%;
    top: 0px;
    left: 0px;
    height: auto;
}

.wife-list .list .item .image {
    width: 100%;
    left: 0;
    top: 0;
    min-height: 20px;
}

.wife-list .bottom-message {
    width: 100%;
    text-align: center;
    size: 10px;
    color: #fff;
}