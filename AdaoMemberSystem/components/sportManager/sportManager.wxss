.pdcontainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    margin: 0px;
}

.RunList {
    width: 100%;
    display: block;
    color: #fffff0;
    font-size: 15px;
}

.RunListTr {
    display: flex;
    width: 98%;
    align-items: center;
    justify-content: center;
    height: 50px;
    border-bottom: 1px solid #fff;
    margin: 0 auto;
}

.lTitle {
    text-align: center;
    font-size: 20px;
    margin: 0 auto;
    color: rgb(50, 197, 210);
}

.RunListTd1 {
    width: 20%;
    text-align: center;
}

.RunListTd2 {
    width: 40%;
    text-align: center;
}

.RunListTd3 {
    width: 35%;
    text-align: center;
}

.RunListB1 {
    width: 5%;
    right: 0;
    bottom: 0px;
}

.lTitle3 {
    width: 35%;
    margin-right: 5%;
}

.upsportbtn {
    width: 120px;
    height: 32px;
    margin-left: 7px;
    text-align: center;
}

.modal {
    width: 80%;
    height: auto;
    position: fixed;
    margin: 0 auto;
    background-color: #334054;
    border: 1px solid #fff;
    border-radius: 5px;
    left: 10%;
    top: 15%;
    box-shadow: 2px 2px 20px #FFF;
}

.modal_content {
    margin: 0 auto;
    width: 95%;
}

.modal_but {
    height: 30px;
    text-align: center;
    width: 100%;
    display: flex;
    font-size: 20px;
    border-top: 1px solid #fff;
    margin-top: 10px;
}

.modal_a {
    width: 50%;
    color: #02d52f;
    border-right: 1px solid #fff;
}

.modal_b {
    width: 50%;
    color: #f00;
}

.modal_content {
    color: #fff;
    width: 100%;
}

.modal_radio {
    display: block;
    margin-top: 8px;
    margin-left: 10px;
}

.modal_title {
    width: 100%;
    font-size: 22px;
    height: 30px;
    text-align: center;
    color: #fff;
    border-bottom: 1px solid #fff;
}

.modal_sel {
    background-color: #708090;
}

